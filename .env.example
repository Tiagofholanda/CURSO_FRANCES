# Configurações do aplicativo
APP_NAME="Curso de Francês"
APP_ENV=development  # development, testing, production
DEBUG=true
SECRET_KEY=sua_chave_secreta_aqui

# Configurações de autenticação
AUTH_ENABLED=true
AUTH_USERNAME=admin
AUTH_PASSWORD=senha_segura_aqui

# Configurações do Google Sheets
GOOGLE_SHEETS_CREDENTIALS={"type": "service_account", ...}
GOOGLE_SHEET_ID=seu_id_da_planilha_aqui

# Configurações de banco de dados (opcional)
DATABASE_URL=sqlite:///db.sqlite3

# Configurações de e-mail (opcional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=seu_email@example.com
EMAIL_HOST_PASSWORD=sua_senha_de_email
DEFAULT_FROM_EMAIL=nao-responda@seu-site.com

# Configurações de análise
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Configurações de CDN (opcional)
USE_CDN=false
CDN_URL=https://cdn.seu-site.com

# Configurações de cache
CACHE_TTL=3600
MAX_CACHE_SIZE=104857600  # 100 MB em bytes

# Configurações de log
LOG_LEVEL=INFO
LOG_FILE=app.log

# Configurações de tema
DEFAULT_FONT_SIZE=16
HIGH_CONTRAST_MODE=false
DARK_MODE=false

# Configurações de vídeo
DEFAULT_VIDEO_WIDTH=800
DEFAULT_VIDEO_HEIGHT=450

# Configurações de responsividade
MOBILE_BREAKPOINT=768
TABLET_BREAKPOINT=1024
